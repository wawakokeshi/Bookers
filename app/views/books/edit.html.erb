<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
  
  <p>
    Title<br>
  <%= f.text_field :title %>
  </p>
	
	<p>
	  Body<br>
  <%= f.text_area :body %>
  </p>
	
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>　|　<a href="/books">Back</a>


