<h1>Books</h1>


<h1>New book</h1>
<%= form_with model: @list, url: '/books', method: :post, local:true do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books.each do |book| %>

 <tbody>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
   </tr>
 </tbody>
</table>

<% end %>

