<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books.each do |book| %>

 <tbody>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><a class="show1" href="/books/[:id]">Show</a></td>
     <td><a class="show1" href="/books/[:id]/edit">Edit</a></td>
     <td><a date-confirm="Are you sure?" class="destroy1" rel="nofoolow" date-method="delete" href="/books/[:id]">Destroy</a></td>
   </tr>
 </tbody>
</table>

<% end %>


<h1>New book</h1>
<%= form_with model: @list, url: '/books', method: :post, local:true do |f| %>
  
  <p>
  <h4>Title</h4>
  <%= f.text_field :title %>
	</p>
	
	<p>
  <h4>Body</h4>
  <%= f.text_area :body %>
  </p>
	
  <%= f.submit 'Create Book' %>
<% end %>

